# 生产环境变量配置文件
# 复制此文件为 .env 并根据实际环境修改配置

# 数据库配置
MYSQL_ROOT_PASSWORD=your_secure_root_password_2025
DB_HOST=mysql
DB_PORT=3306
DB_USER=slowquery_user
DB_PASSWORD=your_secure_db_password_2025
DB_NAME=slow_query_analysis

# 应用配置
FLASK_ENV=production
FLASK_DEBUG=false
FLASK_HOST=0.0.0.0
FLASK_PORT=5172

# 安全配置 (请修改为随机生成的安全密钥)
JWT_SECRET_KEY=your_very_secure_jwt_secret_key_here
SECRET_KEY=your_very_secure_secret_key_here

# 域名配置
DOMAIN_NAME=your-domain.com

# SSL配置
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=/var/log/slowquery-reviewer/app.log

# 监控配置
HEALTH_CHECK_INTERVAL=30
BACKUP_RETENTION_DAYS=7

# 邮件通知配置 (可选)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASSWORD=your_smtp_password
ADMIN_EMAIL=admin@example.com
